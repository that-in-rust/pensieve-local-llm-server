#!/bin/bash
# claude-cloud: Launch Claude Code with Anthropic cloud API
#
# Usage: claude-cloud [additional claude options]
# Example: claude-cloud --continue
# Example: claude-cloud "analyze this complex architecture"

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
CLOUD_SETTINGS="$SCRIPT_DIR/settings-cloud.json"

echo "‚òÅÔ∏è  Launching Claude Code with CLOUD API (api.anthropic.com)"
echo "üìù Using settings: $CLOUD_SETTINGS"
echo ""

# Launch Claude Code with cloud settings override
claude --settings "$CLOUD_SETTINGS" "$@"
